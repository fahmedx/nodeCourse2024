<h1>Editando {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">        
    </div>
    <div class="form-control">
        <label for="occupation">Profissão:</label>
        <input type="text" name="occupation" placeholder="Digite a profissão do usuário:" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
            <label for="newsletter">Deseja receber novidades de nossos serviços?</label>
        {{else}}
            <input type="checkbox" name="newsletter">
            <label for="newsletter">Deseja receber novidades de nossos serviços?</label>
        {{/if}}
    </div>
    <input type="submit" value="Editar">
</form>

<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="userId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residencia">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite sua cidade">            
        </div>
        <input type="submit" value="Incluir Enderecos">
    </form>
    <div class="address-list">
        <h2>Lista de enderecos:</h2>
        {{#each user.Addresses}}
            <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
        {{/each}}
    </div>
</div>